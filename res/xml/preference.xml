<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory
        android:key="category_wechat"
        android:title="@string/wechat" >
        <!--
        <SwitchPreference
            android:defaultValue="true"
            android:key="wechat_remove_game"
            android:title="@string/remove_game" />
        -->
        <EditTextPreference
            android:defaultValue="/sdcard/X2ools/chat_font.ttf"
            android:key="wechat_chat_font"
            android:summary="@string/font_summary"
            android:title="@string/font" />

        <SwitchPreference
            android:defaultValue="true"
            android:key="wechat_scan"
            android:summary="@string/wechat_scan_summary"
            android:title="@string/wechat_scan" />
    </PreferenceCategory>
    <PreferenceCategory
        android:key="category_context_settings"
        android:title="@string/context_settings" >
        <SwitchPreference
            android:defaultValue="true"
            android:key="enable_context_settings"
            android:summary="@string/context_settings_summary"
            android:title="@string/context_settings_title" />
    </PreferenceCategory>
    <PreferenceCategory
        android:key="category_system"
        android:title="@string/system" >
        <net.margaritov.preference.colorpicker.ColorPickerPreference
            android:defaultValue="0"
            android:key="status_color"
            android:summary="@string/status_color_summary"
            android:title="@string/status_color_title" />

        <SwitchPreference
            android:defaultValue="true"
            android:key="t9_search"
            android:summary="@string/t9_search_summary"
            android:title="@string/t9_search_title" />
    </PreferenceCategory>

</PreferenceScreen>
